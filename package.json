{
  "name": "nextjs-electron-boilerplate",
  "version": "3.1.0",
  "main": "backend/build/main.js",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/DarkGuy10/NextJS-Electron-Boilerplate.git"
  },
  "author": "DarkGuy10 <HarperBurn@protonmail.ch>",
  "license": "MIT",
  "scripts": {
    "frontend:dev": "next dev . -p 4000",
    "frontend:build": "next build .",
    "frontend:lint": "next lint .",
    "backend:build": "tsc -p backend && tsc-alias -p ./backend/tsconfig.json",
    "backend:lint": "eslint backend",
    "lint": "prettier -c . && yarn backend:lint && yarn frontend:lint",
    "lint:fix": "prettier -w .",
    "boot": "yarn backend:build && electron .",
    "start": "concurrently -k \"yarn frontend:dev\" \"wait-on tcp:127.0.0.1:4000 && yarn boot\"",
    "pre-build": "yarn frontend:build && yarn backend:build",
    "build": "yarn pre-build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "install-legacy-peer-deps": "npm install --legacy-peer-deps"
  },
  "packageManager": "yarn@4.2.2",
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@next/env": "^14.2.5",
    "@nextui-org/react": "^2.4.6",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.0.3",
    "@radix-ui/react-context-menu": "^2.2.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.1.4",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^9.0.0",
    "electron-updater": "6.1.8",
    "framer-motion": "^11.5.4",
    "geist": "^1.3.1",
    "get-port-please": "^3.1.2",
    "lucide-react": "^0.441.0",
    "next": "^14.2.5",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "socket.io-client": "^4.8.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "1",
    "@electron-forge/cli": "^7.4.0",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.4.0",
    "@electron-forge/plugin-fuses": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@svgr/webpack": "^8.1.0",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "electron-builder": "^25.1.7",
    "electron-devtools-installer": "^3.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.45",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.7",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "wait-on": "^7.2.0"
  }
}
